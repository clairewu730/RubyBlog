<div class='container'>
<div class='row'>
	<div class= 'col-md-8'>
		<h2>Title: <%= @post.title %></h2>
		<p><%= @post.updated_at.strftime('%l:%M%P on %B, %d, %Y') %> by <%= @post.user.email %></p>
			<% if user_signed_in? && current_user.id == @post.user.id %>
					<h4><%= link_to "Edit", edit_post_path(@post) %>
					    <%= link_to "Delete", @post, method: :delete, data: {confirm: "Are you sure?"}%>
					</h4>
			<%end%>
		<h3>Body:</h3>
		<%= @post.body.html_safe %>
	</div>

	<div class = 'col-md-4'>
		<%= image_tag @post.image.url(:medium), class: "img-rounded" %>

	</div>
</div>
</div>

<% @posts.each do |p| %>
	<div class='container'>
		<div class = 'row' >
			<div class= 'col-md-6'>
			<h1 ><%= link_to p.title, p%></h1>
				<p><%= p.updated_at.strftime('%l:%M%P on %B, %d, %Y') %> by <%= p.user.email %>
						<% if user_signed_in? && current_user.id == p.user.id %>
							<%= link_to "Edit", edit_post_path(p) %>
						    <%= link_to "Delete", p, method: :delete, data: {confirm: "Are you sure?"}%>
					    <%end%>
				</p>	
			
			</div>
			<div class = 'col-md-6'>
				<% if p.image_file_size != nil %>
					<%= image_tag p.image.url(:thumb), class: "img-thumbnail"%>
				<% end %>
			</div>
		</div>
	</div>
<% end %>

<div class='container'>
<%= simple_form_for @post, html: { multipart: true } do |p| %>
	<%= p.input :title, label: "Title"%>
	<%= p.label :body %>
	<%= p.text_area :body, class:"tinymce"%>
	<br>
	<%= p.input :image, as: :file, label:"Upload"%>

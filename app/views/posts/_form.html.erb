<script>
  tinymce.init({
  selector: 'textarea',
  height: 500,
  plugins: "textcolor",
  
  menubar: false,
  toolbar: ' undo redo | fontselect fontsizeselect forecolor backcolor| bold italic | alignleft aligncenter alignright alignjustify | bullist numlist outdent indent ',
  content_css: [
    '//fast.fonts.net/cssapi/e6dc9b99-64fe-4292-ad98-6974f93cd2a2.css',
    '//www.tinymce.com/css/codepen.min.css'
  ]
  });
